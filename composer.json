{
  "name": "apigee/devportal-kickstart-project",
  "description": "Composer project template for the Apigee Developer Portal Drupal distribution.",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "path",
      "url": "docroot/profiles/*/*"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "process-timeout": 0
  },
  "require": {
    "composer/installers": "^1.2",
    "drupal/core": "^8.9.1",
    "drupal-composer/drupal-scaffold": "^2.5",
    "drupal/apigee_m10n": "^1.0.0",
    "drupal/commerce": "^2.13",
    "php": "^7.1",
    "drush/drush": "~8",
    "oomphinc/composer-installers-extender": "^1.1",
    "drupal/swagger_ui_formatter": "^2.4",
    "drupal/simplesamlphp_auth": "^3.2",
    "drupal/simplesamlphp_custom_attributes": "^1.0",
    "drupal/menu_per_role": "^1.1",
    "drupal/externalauth": "1.2",
    "drupal/ctools": "^3.2",
    "drupal/css_editor": "^1.2",
    "drupal/maxlength": "^1.0",
    "drupal/entity_reference_revisions": "^1.8",
    "drupal/smtp": "1.0.0-beta7",
    "drupal/components": "^1.1",
    "drupal/entity": "^1.0",
    "drupal/menu_trail_by_path": "^1.2",
    "drupal/token": "^1.6",
    "drupal/key": "^1.12",
    "drupal/views_bulk_operations": "^3.3",
    "drupal/autologout": "1.3",
    "drupal/seckit": "^1.2",
    "bower-asset/swagger-ui": "^3.25",
    "apigee/apigee_devportal_kickstart": "^1.19",
    "drupal/entity_update": "^2.0@RC"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/cert",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/config",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/metadata",
      "cp -r ./samlconfig/cert/ ./vendor/simplesamlphp/simplesamlphp/cert/",
      "cp -r ./samlconfig/config/ ./vendor/simplesamlphp/simplesamlphp/config/",
      "cp -r ./samlconfig/metadata/ ./vendor/simplesamlphp/simplesamlphp/metadata/"
    ],
    "post-update-cmd": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/cert",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/config",
      "mkdir -p ./vendor/simplesamlphp/simplesamlphp/metadata",
      "cp -r ./samlconfig/cert/ ./vendor/simplesamlphp/simplesamlphp/cert/",
      "cp -r ./samlconfig/config/ ./vendor/simplesamlphp/simplesamlphp/config/",
      "cp -r ./samlconfig/metadata/ ./vendor/simplesamlphp/simplesamlphp/metadata/"
    ],
    "quick-start": [
      "composer install",
      "php web/core/scripts/drupal quick-start apigee_devportal_kickstart"
    ]
  },
  "extra": {
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/libraries/{$name}": ["type:drupal-library","type:npm-asset","type:bower-asset"],
      "docroot/libraries/swagger_ui": ["bower-asset/swagger-ui"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"]
    },
    "installer-types": [
      "npm-asset",
      "bower-asset"
    ],
    "enable-patching": true,
    "patches": {
      "drupal/externalauth": {
        "External Auth module attributes mapping patch ":"patches/custom_attributes_mapping.patch"
      },
      "drupal/autologout": {
        "Fix AutologoutManager class incompatible with interface ":"https://www.drupal.org/files/issues/2020-03-20/3121214-autologout_manager_incompatible_interface.patch"
      },
      "drupal/smtp": {
        "Fix SMTP Error: Could not authenticate. ":"https://www.drupal.org/files/issues/2020-03-01/3114989-18.patch"
      }
    }
  },
  "require-dev": {
    "drupal/kint": "^2.1"
  }
}
